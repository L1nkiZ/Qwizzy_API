                    {
                        "name": "current_sort_dir",
                        "in": "query",
                        "description": "Direction du tri (asc, desc)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Nombre d'éléments par page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste paginée des types de questions"
                    }
                }
            },
            "post": {
                "tags": [
                    "QuestionType"
                ],
                "summary": "Créer un nouveau type de question",
                "operationId": "ffb2ef2d61544e83a7f34f7da4a91a8c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 200,
                                        "example": "QCM"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Type de question créé avec succès"
                    },
                    "422": {
                        "description": "Erreur de validation"
                    }
                }
            }
        },
        "/question-types/{id}": {
            "put": {
                "tags": [
                    "QuestionType"
                ],
                "summary": "Mettre à jour un type de question",
                "operationId": "c598771df748199b62667e76a9747695",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID du type de question",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 200,
                                        "example": "QCM modifié"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Type de question modifié avec succès"
                    },
                    "422": {
                        "description": "Erreur de validation"
                    }
                }
            },
            "delete": {
                "tags": [
                    "QuestionType"
                ],
                "summary": "Supprimer un type de question",
                "operationId": "05c87d778260600526a317d8319a3ab6",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID du type de question",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Type de question supprimé avec succès"
                    },
                    "404": {
                        "description": "Type de question non trouvé"
                    }
                }
            }
        }
    },
