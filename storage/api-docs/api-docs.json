    "paths": {
        "/api/difficulties": {
            "get": {
                "tags": [
                    "Difficulty"
                ],
                "summary": "Obtenir la liste des difficultés",
                "description": "Retourne la liste paginée des niveaux de difficulté",
                "operationId": "getDifficultiesList",
                "parameters": [
                    {
                        "name": "current_sort",
                        "in": "query",
                        "description": "Champ de tri",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "id"
                        }
                    },
                    {
                        "name": "current_sort_dir",
                        "in": "query",
                        "description": "Direction du tri",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "asc",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Nombre d'éléments par page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 15
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des difficultés récupérée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "difficulty": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Difficulty"
                ],
                "summary": "Créer une nouvelle difficulté",
                "description": "Crée un nouveau niveau de difficulté",
                "operationId": "storeDifficulty",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "point"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 200,
                                        "example": "Facile"
                                    },
                                    "point": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Difficulté créée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation"
                    }
                }
            }
        },
        "/api/difficulties/{id}": {
            "put": {
                "tags": [
                    "Difficulty"
                ],
                "summary": "Mettre à jour une difficulté",
                "description": "Met à jour un niveau de difficulté existant",
                "operationId": "updateDifficulty",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la difficulté",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "point"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 200,
                                        "example": "Moyen"
                                    },
                                    "point": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 3
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Difficulté modifiée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation"
                    },
                    "404": {
                        "description": "Difficulté non trouvée"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Difficulty"
                ],
                "summary": "Supprimer une difficulté",
                "description": "Supprime un niveau de difficulté existant",
                "operationId": "deleteDifficulty",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la difficulté",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Difficulté supprimée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "404": {
                        "description": "Difficulté non trouvée"
                    }
                }
            }
        },
        "/question-types": {
            "get": {
                "tags": [
